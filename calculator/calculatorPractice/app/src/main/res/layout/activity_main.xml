<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
<RelativeLayout
        android:id="@+id/rl_main_act_number"
        android:layout_width="match_parent" android:layout_height="120dp">
    <TextView
            android:layout_toLeftOf="@+id/btn_delete"
            android:layout_above="@+id/tv_result"
            android:id="@+id/tv_Expression"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:textStyle="bold"
            android:gravity="center_vertical|right"
            android:paddingHorizontal="16dp"/>
    <TextView
            android:id="@+id/btn_back"
            android:layout_above="@+id/btn_delete"
            android:layout_width="80dp" android:layout_height="match_parent"
    android:text="delete"
    android:layout_alignParentRight="true"
    android:gravity="center"
    android:textSize="24dp"/>
    <View
            android:layout_below="@id/btn_back"
            android:layout_alignParentRight="true"
            android:layout_width="80dp" android:layout_height="1dp"
          android:background="#000"/>
    <TextView
            android:id="@+id/btn_delete"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_width="80dp" android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="AC"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="24dp"/>
    <TextView
            android:layout_toLeftOf="@+id/btn_delete"
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_result"
            android:textSize="20dp"
            android:gravity="center_vertical|right"
            android:paddingHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />
</RelativeLayout>
    <LinearLayout
            android:id="@+id/ll_main_act"
            android:layout_below="@+id/rl_main_act_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/btn_1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:onClick="onClicknums"/>
            <TextView
                    android:id="@+id/btn_2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:onClick="onClicknums"/>
            <TextView
                    android:id="@+id/btn_3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:onClick="onClicknums"/>
            <TextView
                    android:id="@+id/btn_plus"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:onClick="onClickSigns"/>

        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/btn_4"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:onClick="onClicknums"/>
            <TextView
                    android:id="@+id/btn_5"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:onClick="onClicknums"/>
            <TextView
                    android:id="@+id/btn_6"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:onClick="onClicknums"/>
            <TextView
                    android:id="@+id/btn_minus"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:onClick="onClickSigns"/>

        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/btn_7"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:onClick="onClicknums"/>
            <TextView
                    android:id="@+id/btn_8"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:onClick="onClicknums"/>
            <TextView
                    android:id="@+id/btn_9"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:onClick="onClicknums"/>
            <TextView
                    android:id="@+id/btn_mul"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="*"
                    android:textSize="24dp"
                    android:onClick="onClickSigns"/>

        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/btn_dot"
                    android:text="."
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="24dp"
            />
            <TextView
                    android:id="@+id/btn_0"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="24dp"
                    android:onClick="onClicknums"/>
            <TextView
                    android:id="@+id/btn_calcuate"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="="
                    android:gravity="center"
                    android:textSize="24dp"
                    android:onClick="onClickCalculate"/>
            <TextView
                    android:id="@+id/btn_div"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="%"
                    android:textSize="24dp"
                    android:onClick="onClickSigns"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>